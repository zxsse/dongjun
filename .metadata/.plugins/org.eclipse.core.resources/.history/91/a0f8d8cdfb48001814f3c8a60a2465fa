			{
				Thread.sleep(500);
			}
			catch (InterruptedException e)
			{
				e.printStackTrace();
			}
			
			
		}*/
	}

}

class MyTread3 implements Runnable
{

	@Override
	public void run() 
	{
		// TODO Auto-generated method stub
		while(true)
		{
			System.out.print("|");
			try
			{		
				Thread.sleep(3000);
			}
			catch (InterruptedException e)
			{
				e.printStackTrace();
			}
			if(Main2.data == true)
			{
				System.out.println("파일을 자동저장합니다.");
			}
		}
	}
	
}